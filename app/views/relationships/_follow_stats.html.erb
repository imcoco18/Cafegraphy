<% user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(user) do %>
    <strong id="following-count_<%= user.id %>" class="stat">
      <%= user.followings.count %>
    </strong>
    following
  <% end %>|
  <%= link_to followers_user_path(user) do %>
    <strong id="followers-count_<%= user.id %>" class="stat">
      <%= user.followers.count %>
    </strong>
    followers
  <% end %>
</div>