<section class="mypage">
	<div class="container">
		<div class="row">
			<div class="col-xs-10.offset-xs-2 ml-auto mr-auto">
				<div class="mypage-profile text-center">
					<p><%= attachment_image_tag(@user, :profile_image, size: "100x100" ,fallback: "Cafegraphy.jpg", class: "rounded-circle") %>
					</p>
					<% if @user == current_user %>
					<span class="edit-link">
						<%= link_to edit_user_path(@user) do %>
						 <i class="fas fa-cog fa-lg"></i>
						<% end %>
					</span>
					<% end %>
					<div class="mypage-profile-name">
					  <h3><%= @user.name %></h3>
					  <div class="follow-stats">
					    <%= render 'relationships/follow_stats', user: @user %>
					  </div>
					  <div class="follow-button" id="follow-button_<%= @user.id %>">
					    <%= render 'relationships/follow_button', user: @user %>
					  </div>

					  <p><%= @user.introduction %></p>
				    </div>
				</div>

				<hr>

				<div class="mypage-index">
					<% @posts.each do |post| %>
					<div class="box-image">
					 <%= link_to post_path(post.id) do %>
	                  <%= attachment_image_tag(post, :post_image, size: "160x160") %>
	                 <% end %>
	                </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
