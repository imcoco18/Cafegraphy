<!DOCTYPE html>
<html>
  <head>
    <title>Cafegraphy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/ed4356e0bc.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <header>
      <nav class="nav navbar-nav title">
          <% if user_signed_in? %>
          <%= link_to "Cafegraphy", posts_path, class: "no-underline", :style=>"color:#EFEDED;" %>
          <% else %>
          <%= link_to "Cafegraphy", root_path, class: "no-underline", :style=>"color:#EFEDED;" %>
          <% end %>
      </nav>
      <nav class="nav-right">
        <ul class="nav nav-ber">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
　             <span><i class="fas fa-user"></i></span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span><i class="fas fa-search"></i></span>
              <% end %>
            </li>
            <li>
              <%= link_to "投稿", new_post_path %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path %>
            </li>
            <li>
              <%= link_to about_path do %>
              Cafegraphy<span><i class="fas fa-question"></i></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
    <footer>
      <span class="logo">Cafegraphy</span>
        <ul class="footer-menu">
        <li>
          <%= link_to "home", root_path %> ｜
        </li>
        <li>
          <%= link_to "about", about_path %> ｜
        </li>
        <li>
          <%= link_to "お問い合わせ", about_path, :style=>"color:#99CBE8;" %>
        </li>
        </ul>
    </footer>
  </body>
</html>
