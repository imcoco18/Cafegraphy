<% provide(:title, "ログイン") %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 text-center center-block">
    <div class="wrapper">
    <h2>ログイン</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'layouts/error', object: f.object %>
      <div class="field form form-group">

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email field-in font", placeholder: "Email" %>
      </div>

      <div class="field form form-group">

        <%= f.password_field :password, autocomplete: "current-password", class: "password field-in font", placeholder: "password" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "submit font form" %>
      </div>


      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

    <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
