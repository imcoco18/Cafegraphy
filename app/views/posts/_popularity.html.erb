<section class="post-rank clearfix">
	<h3><span><i class="fas fa-crown fa-fw"></i></span>人気投稿</h3>
	<% all_ranks.each do |post_rank| %>
		<div class="post-rank-box">
			<div class="post-rank-user">
				<%= link_to user_path(post_rank.user.id), class: "no-underline" do %>
				<%= attachment_image_tag post_rank.user, :profile_image ,fallback: "Cafegraphy.jpg", class: "rounded-circle" %>
				<%= post_rank.user.name %>
				<% end %>
			</div>
			<div class="post-rank-img">
				<%= link_to post_path(post_rank.id) do %>
					<%= attachment_image_tag(post_rank, :post_image) %>
				<% end %>
			</div>
		</div>
	<% end %>
</section>
<div class="populary-user-btn">
	<%= link_to users_path do %>
		<h5 class="float-right">＞＞人気のユーザーを見る</h5>
	<% end %>
</div>