<section class="search-index">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 ml-auto mr-auto">

				<!--キーワード検索-->
				<div class="search-keyword_shop_name">
					<!--Ransackを使うとsearch_form_forを使える-->
					<%= search_form_for @q, url: search_posts_path do |f| %>
					<!-- Cafe検索 -->
					<div class="form-group">
	          <span><i class="fas fa-store"></i></span><%= f.label :title_or_shop_name, "Cafe" %>
	          <%= f.search_field :title_or_shop_name_cont, class: 'form-control', placeholder: 'キーワードでCafe検索' %>
	        </div>
	        <!-- ユーザー検索 -->
	        <div class="form-group">
	          <span><i class="fas fa-users"></i></span><%= f.label :user_name, "Cafegrapher" %>
  					<%= f.text_field :user_name_cont, class: 'form-control', placeholder: 'キーワードでユーザー検索' %>
  				</div>

  				<div class="form-group">
  					<span><i class="fas fa-tags"></i></span><%= f.label :user, "Tags" %>
						<%= form_tag search_posts_path, method: :get, class: 'search-tag_form' do %>
			      <%= select_tag :tag_id,
			                     options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
			                     {
			                       prompt: 'タグで絞り込み検索',
			                       class: 'form-control boards__select',
			                       onchange: 'submit(this.form);'
			                     }
			      %>
			    <!-- 	<% end %> -->
  				</div>

	          <%= f.submit 'Search', class: "new-btn" %>
	        </div>
	        <% end %>
	      </div>
	      <hr>
	      
	        <!--キーワード検索の結果を表示-->
							<div class="col-xs-6">
						<% if @posts || @result != nil %>
							<section class="post-index">
								<% @posts.each do |tag| %>
								  <div class="post-index-box">
									<div class="view view-first">
	                	<%= link_to post_path(tag.id) do %>
	                		<%= attachment_image_tag(tag, :post_image, size: "480x480") %>
	                	<% end %>
	              	</div>
				        	<div class="float-left" id="likes_buttons_<%= tag.id %>">
										<%= render partial: 'likes/like', locals: {post: tag} %>
									</div>
	              	<div class="comment-count">
										<span><i class="fa fa-comment"></i></span>
										<%= tag.post_comments.count %>
									</div>
									<div class="post-body">
										<h3 class="post-title"><%= tag.title %></h3>
	        					<h5><span><i class="fas fa-store"></i> <%= tag.shop_name %></h5>
									</div>
									<div class="post-tags">
				        		<% tag.tags.each do |tag| %>
				        		  <span class="badge badge-info"><%= tag.name %></span>
				        		<% end %>
				        	</div>
									<div class="post-user float-right">
									<%= link_to user_path(tag.user.id) do %>
										<%= attachment_image_tag tag.user, :profile_image, size: "40x40" ,fallback: "Cafegraphy.jpg", class: "rounded-circle" %>
									<% end %>
									<%= link_to user_path(tag.user.id), class: "no-underline" do %>
									  <%= tag.user.name %>
									<% end %>
									</div>
								</div>
								<% end %>
							</section>

	            <section class="post-index">
								<% @results.each do |result| %>
								<div class="post-index-box">
									<div class="view view-first">
	                	<%= link_to post_path(result.id) do %>
	                		<%= attachment_image_tag(result, :post_image, size: "480x480") %>
	                	<% end %>
	              	</div>
				        	<div class="float-left" id="likes_buttons_<%= result.id %>">
										<%= render partial: 'likes/like', locals: {post: result} %>
									</div>
	              	<div class="comment-count">
										<span><i class="fa fa-comment"></i></span>
										<%= result.post_comments.count %>
									</div>
									<div class="post-body">
										<h3 class="post-title"><%= result.title %></h3>
	        					<h5><span><i class="fas fa-store"></i> <%= result.shop_name %></h5>
									</div>
									<div class="post-tags">
				        		<% result.tags.each do |tag| %>
				        		  <span class="badge badge-info"><%= tag.name %></span>
				        		<% end %>
				        	</div>
									<div class="post-user float-right">
									<%= link_to user_path(result.user.id) do %>
										<%= attachment_image_tag result.user, :profile_image, size: "40x40" ,fallback: "Cafegraphy.jpg", class: "rounded-circle" %>
									<% end %>
									<%= link_to user_path(result.user.id), class: "no-underline" do %>
									  <%= result.user.name %>
									<% end %>
									</div>
								</div>
								<% end %>
								<div class="text-center"><%= paginate @results %></div>
							</section>
							<% else %>
							<p>検索できませんでした。</p>
							<% end %>
	        </div>
				</div>
			</div>
		</div>
	</div>
</section>