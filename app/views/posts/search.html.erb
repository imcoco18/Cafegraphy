<section class="search-index">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<ul class="tabs">
					<li class="tab col-xs-6"><a href="#test1">キーワード検索</a></li>
					<li class="tab col-xs-6"><a href="#test2">タグ検索</a></li>
				</ul>

				<!--キーワード検索-->
				<div id="test1">
					<!--Ransackを使うとsearch_form_forを使える-->
					<%= search_form_for @q,url: search_posts_path do |f| %>

					<div class="form-group">
	            <i class="material-icons prefix">search</i>
	            <%= f.search_field :shop_name_cont, class: 'form-control', placeholder: 'キーワードでCafe検索' %>
	            <%= f.submit 'Search', class: "btn waves-effect waves-light" %>
	        </div>
	        <% end %>
	        <!--キーワード検索の結果を表示-->
	        <div class="col-xs-6">
	        	<div class="card" id = "test1">
	            <section class="post-index">
								<% @results.each do |result| %>
								<div class="post-index-box">
									<div class="view view-first">
	                	<%= link_to post_path(result.id) do %>
	                		<%= attachment_image_tag(result, :post_image, size: "480x480") %>
	                	<% end %>
	              	</div>
	              	<div class="comment-count">
										<span><i class="fa fa-comment"></i></span>
										<%= result.post_comments.count %>
									</div>
									<div class="post-body">
										<h3 class="post-title"><%= result.title %></h3>
	        					<h5><span><i class="fas fa-store"></i> <%= result.shop_name %></h5>
									</div>
									<div class="post-user float-right">
									<%= link_to user_path(result.user.id) do %>
										<%= attachment_image_tag result.user, :profile_image, size: "40x40" ,fallback: "Cafegraphy.jpg", class: "rounded-circle" %>
									<% end %>
									<%= link_to user_path(result.user.id), class: "no-underline" do %>
									  <%= result.user.name %>
									<% end %>
									</div>
								</div>
								<% end %>
							</section>
	          </div>
	        </div>
				</div>
			</div>
		</div>
	</div>
</section>