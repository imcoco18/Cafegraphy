<div class="row">
	<div class="col-xs-12">
		<section class="post-show">
			<div class="post-user">
			<%= @post.user.profile_image %>
			<%= @post.user.name %>
			</div>
			<div class="post-item">
				<div class="post-image">
      　 <%= attachment_image_tag @post, :post_image, size: "500x500" %>
        </div>
        <div class="post-content">
        		<!-- いいね機能 -->
        	<div id="like-<%= @post.id %>">
							<%= render partial: 'likes/like', locals: { post: @post } %>
					</div>
        	<div class="post-title">
        		<%= @post.title %>
        	</div>
        	<div class="post-body">
        		<%= @post.shop_name %>
        	</div>
        	<div class="post-link">
        	<% if @post.user == current_user %>
             <%= link_to post_path(@post), method: :delete do %>
             <i class="fas fa-trash-alt"></i>
             <% end %>
          <% end %>
					</div>
        </div>

    　 </div>
			</div>
		</section>
	</div>

</div>
