<div class="row">
	<div class="col-xs-12">
		<section class="post-show">
			<span class="box-title">Cafegraphy</span>
			
			<div class="post-item">
				<div class="post-image">
      　 <%= attachment_image_tag @post, :post_image, size: "480x480" %>
        </div>
        <div class="post-content">
        		<!-- いいね機能 -->
        	<div class="float-left" id="like-<%= @post.id %>">
							<%= render partial: 'likes/like', locals: { post: @post } %>
					</div>
					<div class="comment-count">
						<span><i class="fa fa-comment"></i></span>
						<%= @post.post_comments.count %>
					</div>
        	<div class="post-title">
        		<%= @post.title %>
        	</div>
        	<div class="post-body">
        		<%= @post.shop_name %>
        		<% @post.tags.each do |tag| %>
        		  <span class="badge badge-info"><%= tag.name %></span>
        		<% end %>
        	</div>
        	<div class="post-link">
        	<% if @post.user == current_user %>
             <%= link_to post_path(@post), method: :delete do %>
             <i class="fas fa-trash-alt"></i>
             <% end %>
          <% end %>
					</div>
        </div>
			</div>
			<div class="post-user float-right">
				<%= @post.user.profile_image %>
				<%= @post.user.name %>
			</div>
			<hr>
			<div class="comment-wrapper">
				<p>コメント一覧</p>
				<% @post.post_comments.each do |c| %>
				<div class="comment-index">
				 <div class="clearfix">
				  <%= c.comment %>
				 </div>
				  <%= c.created_at.strftime('%Y/%m/%d') %>
				  <%= c.user.name %>

				 <% if c.user == current_user %>
				 <div class="comment-delete">
				 	<%= link_to post_post_comment_path(c.post, c), method: :delete do %>
				 		<i class="fas fa-trash-alt"></i>
				 	<% end %>
				 </div>
				 <% end %>
			  </div>
			  <% end %>
			</div>
			<div class="comment-form">
				<%= form_for [@post, @post_comment] do |f| %>
				 <%= f.text_area :comment, rows: "5", class: "form-control", placeholder: "コメント欄" %>
				 <%= f.submit "投稿する", class: "btn btn-info" %>
				<% end %>
			</div>
		</section>
	</div>

</div>
