<section class="post-new">
	<div class="row">
		<div class="col-xs-9">
			<h2 class="head-line">投稿</h2>
			<%= form_for(@post, url: posts_path) do |f|%>
				<% if @post.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
				      <ul>
				      <% @post.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				<% end %>
				<div class="row">
					<div class="col-xs-12 form-group">
						<%= f.attachment_field :post_image, class: "image" %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-6">
						<%= f.label :"タイトル", class: "control-label" %>
						<%= f.text_field :title, class: "form-control", placeholder:"タイトル" %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-6">
						<%= f.label :"店名", class: "control-label" %>
						<%= f.text_field :shop_name, class: "form-control", placeholder:"店名" %>
					</div>
				</div>
				<hr>
				<%= f.submit "投稿する", class: "btn btn-info" %>
			<% end %>
		</div>
	</div>
</section>