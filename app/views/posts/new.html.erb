<section class="post-new">
	<div class="row">
		<div class="col-xs-12 ml-auto mr-auto">
			<h2 class="head-line">投稿</h2>
			<%= form_for(@post, url: posts_path) do |f|%>
				<% if @post.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
				      <ul>
				      <% @post.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				<% end %>
				<div class="post-new-box col-xs-12">
					<div class="new-img form-group">
						<%= f.attachment_field :post_image, class: "image" %>
					</div>
					<div class="new-title form-group">
						<%= f.text_field :title, class: "form-control", placeholder:"タイトル" %>
					</div>

					<div class="new-shop_name form-group">
						<%= f.text_field :shop_name, class: "form-control", placeholder:"店名" %>
					</div>

					<div class="new-tags form-group">
					    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
		            <div class="form-check form-check-inline">
		                <%= tag.label class: "form-check-label tag-label" do %>
	                    <%= tag.check_box class: "form-check-input" %>
	                    <%= tag.text %>
          					<% end %>
      					</div>
        			<% end %>
    			</div>

    			<div class="actions">
						<%= f.submit "投稿する", class: "new-btn" %>
					</div>

				</div>
			<% end %>
			<%= link_to "前に戻る", posts_path, class: "no-underline back-btn" %>
		</div>
	</div>
</section>