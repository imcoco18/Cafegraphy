<div class="row">
	<div class="col-xs-8.offset-xs-4 ml-auto mr-auto">
		<section class="post-index">
				<% @posts.each do |post| %>
				<div class="post-index-box">
					<div class="view view-first">
                    	<%= link_to post_path(post.id) do %>
                    		<%= attachment_image_tag(post, :post_image, size: "480x480") %>
                    	<% end %>
                  	</div>
                  	<div class="comment-count">
						<span><i class="fa fa-comment"></i></span>
						<%= post.post_comments.count %>
					</div>
					<div class="post-title">
						<%= post.title %>
					</div>
					<div class="post-user float-right">
					<%= link_to user_path(post.id) do %>
						<%= attachment_image_tag post.user, :profile_image, size: "40x40" ,fallback: "Cafegraphy.jpg", class: "rounded-circle" %>
					<% end %>
					<%= link_to user_path(post.id), class: "no-underline" do %>
					  <%= post.user.name %>
					<% end %>
					</div>
				</div>
				<% end %>
		</section>
	</div>
</div>

