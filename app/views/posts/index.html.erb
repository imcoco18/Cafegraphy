<section class="post-index">
	<div class="row">
		<div class="col-xs-9">
			<div class="post-box">
				<% @posts.each do |post| %>
					<div class="view view-first">
                    <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post_image, :post_image %>
                    <% end %>
                  	</div>
					<%= post.title %>
					<%= post.user.name %>
				<% end %>

			</div>
		</div>
	</div>
</section>
