<div class="container">
	<div class="row">
		<div class="col-xs-12 ml-auto mr-auto post-index-top">
			<%= render partial: 'popularity', locals: {all_ranks: @all_ranks} %>
		</div>
	</div>

	<!-- <div class="row">
		<div class="col-xs-3">
			<%#= link_to #'tag', tags_index_posts_path %>
		</div>
	</div> -->

	<div class="row">
		<div class="col-xs-12 ml-auto mr-auto">
			<section class="post-index">
				<% @posts.each do |post| %>
					<div class="post-index-box">
						<div class="post-index-img">
          	<%= link_to post_path(post.id) do %>
          		<%= attachment_image_tag(post, :post_image, size: "500x500") %>
          	<% end %>
          	</div>
	                  	<!-- いいね機能 -->
	        	<div class="float-left" id="likes_buttons_<%= post.id %>">
							<%= render partial: 'likes/like', locals: {post: post} %>
						</div>

	          <div class="comment-count">
							<span><i class="fa fa-comment"></i></span>
							<%= post.post_comments.count %>
						</div>
						<div class="post-title">
							<%= post.title %>
						</div>
						<div class="post-user float-right">
							<%= link_to user_path(post.user.id) do %>
								<%= attachment_image_tag post.user, :profile_image, size: "40x40" ,fallback: "Cafegraphy.jpg", class: "rounded-circle" %>
							<% end %>
							<%= link_to user_path(post.user.id), class: "no-underline" do %>
						  	<%= post.user.name %>
							<% end %>
						</div>
					</div>
				<% end %>
				
			</section>
			<div class="text-center"><%= paginate @posts %></div>
		</div>
	</div>
</div>
